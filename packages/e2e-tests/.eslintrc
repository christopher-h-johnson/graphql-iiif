{
  "extends": [
    "plugin:jest/recommended",
    "plugin:cypress/recommended",
    "standard"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "cypress/globals": true
  },
  "rules": {
    "comma-dangle": "off",
    "indent": [
      "error",
      2
    ],
    "object-curly-spacing": "off",
    "quotes": [
      2,
      "single"
    ],
    "space-before-function-paren": "off",
    "strict": [
      2,
      "never"
    ],
    "generator-star-spacing": 1,
    "object-shorthand": 1,
    "arrow-parens": 1,
    "no-await-in-loop": 1,
  },
  "plugins": [
    "jest",
    "cypress"
  ]
}

